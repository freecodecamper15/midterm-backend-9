<%= form_for @post, :url => post_path(@post), :method => :patch do |f| %>

<div class='field'>
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title %>
</div>
<div class='field'>
  <%= f.label 'Category' %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
</div>
<div class='field'>
  <%= f.label :content, 'Content' %>
  <%= f.text_area :content %>
</div>

  <%= f.submit 'Finishing Editing' %>

<% end %>

<%= link_to 'Back', posts_path %>